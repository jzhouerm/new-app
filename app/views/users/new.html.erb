        
<h3>Please enter information below to start joining and creating events on So'Mate!</h3>
            
<%= form_for @user do |f| %>

<% if flash[:errors] %>
<% flash[:errors].map do |error|%>
<p style="color: red;"><%= error %></p>
<%end%>
<% end %>
                            
<label>Name:</label>
<%=f.text_field :name%> <br>
                               
<label>Email: </label>
<%=f.text_field :email %><br>
                               
<label >Password: </label>
<%=f.password_field :password %> <br>
                                
<label>Password Confirmation: </label>
<%= f.password_field :password_confirmation %> <br>
                               
<label>Profile Picture</label>
<input type="file" id="img_url" name="img_url">
<br>
                                

<%= f.submit "Sign up" %> 

                                
<h2>If you already have an account:  <%= link_to "Log in!", login_path %></h2>
                            
<% end %>
                       