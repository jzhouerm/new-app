
<h3>Meet new friends and explore new events happening now!</h3>
<h4>Search for fun In-person or Online Events:</h4>
<%= form_tag(events_path, method: :get) do %>
<%= text_field_tag(:search, params[:search]) %>
<%= submit_tag ("Search by City") %>
<% end %>

<!-- END OF SEARCH BAR -->
<div class="grid-container">
<% @events.each do |event|%>
<div class="grid-item">
<p><%= link_to event.name, event_path(event) %></p>
<img class="grid-item" src="<%= event.img_url %>" alt="<% event.name %>" >

</div>
<% end %>
</div>